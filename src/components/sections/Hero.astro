---
import { basics, UI } from "@/location/es.json";
import Image from "astro/components/Image.astro";
import "@/style/global.css";
const { hero_ui } = UI;
const { open_network, email_send, whatsapp_send } = hero_ui;
const { name, label, university, image, email, phone, profiles, location } =
  basics;
const { city, region, country } = location;
---
<section>
  <div class="flex flex-row items-center justify-between gap-4">
    <div class="flex flex-col gap-2 pr-8 w-4/5">
      <h1>{name}</h1>
      <h1>{label}</h1>
      <h1>{university}</h1>
      <span>
        {city}, {region}, {country}
      </span>
      <footer>
        {
          profiles.map(({ network, url, icon }) => {
            let title;
            if (network === "email") {
              title = `${email_send} ${email}`;
            } else if (network === "whatsapp") {
              title = whatsapp_send;
            } else {
              title = `${open_network} ${network}`;
            }
            return (
              <a
                class="inline-flex items-center justify-center border border-solid border-gray-300 rounded-md mt-1 mr-1 transition-all duration-300 ease-out w-8 h-8 p-2
                    hover:bg-gray-950 hover:text-white"
                href={url}
                title={title}
                target="_blank"
                aria-label={network}
              >
                <i class={icon} />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <Image
        class="object-cover rounded-xl"
        src="/me.webp"
        alt={name}
        width="170"
        height="170"
        loading="eager"
      />
    </figure>
  </div>
</section>

<style>
  h1 {
    width: 80%;
    font-size: 1.5rem;
    font-weight: bold;
    color: black;
  }
</style>
